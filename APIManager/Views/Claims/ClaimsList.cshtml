@using APIManager.Models
@model List<RequestViewModel>

@section Styles {
    <link href="@Url.Content("~/css/service-list.css")" rel="stylesheet" type="text/css" />
}

<h1>Claims Manager</h1>

<div class="container">
    <div class="row">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="overflow-hidden card table-nowrap table-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Claims List</h5>
                </div>
                <div class="table-responsive table-service-list">
                    <table class="table mb-0">
                        <thead class="small text-uppercase bg-body text-muted">
                            <tr>
                                <th>Client</th>
                                <th>Route Path</th>
                                <th>Method Type</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var route in Model)
                            {
                                <tr class="align-middle">
                                    <td>
                                        <div class="d-flex align-items-center">                                            
                                            <div>
                                                <div class="h6 mb-0 lh-1">@route.Route.Clients.First().ClientName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@route.Route.RoutePath</td>
                                    <td>@route.Route.MethodType?.MethodTypeName</td>
                                    <td>
                                            @Html.ActionLink( "",
                                                      "EditClaim",
                                                     "Claims",
                                                     new
                                                     {
                                                         route.Route.RouteId
                                                     },
                                                     new { @class = "fas fa-edit" }
                                                     )
 
                                    </td>
                                    <td>
                                            @Html.ActionLink("",
                                                     "DeleteClaim",
                                                     "Claims",
                                                     new
                                                     {
                                                        route.Route.RouteId
                                                     },
                                                     new { @class = "fa-solid fa-trash" }
                                                     )
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/claimsList.js"></script>
}